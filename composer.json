{
    "name": "kbk/nepali-payment-gateway",
    "type": "library",
    "description": "Nepali Payment Gateway integration in PHP language. It includes eSewa, Khalti, ConnectIps, etc.",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Kbk\\NepaliPaymentGateway\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Aryan Malla",
            "email": "aryanmalla19@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
      "ext-curl": "*",
      "ext-openssl": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "mockery/mockery": "^1.6",
        "phpdocumentor/phpdocumentor": "^3.9"
    },
    "scripts": {
        "test": "phpunit"
    }
}
